@charset "utf-8"

alert = #86C166
error = #c16686

$common
  color: #2b2b2b
  width: 250px
  position: fixed
  top: -65px
  right: 15px
  background: #fff
  box-shadow: 1px 2px 3px -4px #000
  border-radius: 3px
  box-sizing: border-box
  box-shadow: 0 2px 7px -2px rgba(0,0,0,0.35)
  transform: translateZ(0)
  z-index: 999999999999

+prefix-classes("toriaezu-bookmark-extension-")
  .alert
    @extend $common
    border: 2px solid alert

  .error
    @extend $common
    border: 2px solid error

  .animate
    transition: top .25s ease-in, right 1s ease-in 2.5s, opacity .5s ease-in 2.5s
    top: 15px
    right: -210px
    opacity: 0

  .p
    margin: .5em .3em
    text-align: center
    font-size: 16px
    font-family:Verdana, "游ゴシック", YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif;

[class^="icono-"]
  position: relative
  bottom: 2px
  transform: rotate(-45deg) scale(1.3)
  right: 17px

.icono-check
  color: alert !important

.icono-cross
  color: error !important
